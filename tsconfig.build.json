{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node"],

    // Build-specific optimizations for maximum performance
    "incremental": true,
    "composite": false,
    "tsBuildInfoFile": "./config/tsconfig.build.tsbuildinfo",

    // Aggressive performance optimizations
    "assumeChangesOnlyAffectDirectDependencies": true,
    "disableReferencedProjectLoad": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "disableSolutionSearching": true,

    // Minimal memory usage
    "maxNodeModuleJsDepth": 0,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // Disable unnecessary features
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "explainFiles": false,
    "extendedDiagnostics": false,

    // Disable source maps for build speed
    "sourceMap": false,
    "inlineSourceMap": false,
    "declarationMap": false,

    // Optimize module resolution
    "moduleResolution": "node"
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "templates/**",
    "docs/**",
    "**/*.md",
    "test/**",
    "src/test/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.config.*",
    "jest.setup.*",
    "scripts/**",
    "src/lib/testing/**",
    "src/test/performance/**",
    "src/components/dashboard/analytics/**",
    "src/components/dashboard/integrations/**",
    "src/components/dashboard/personalization/**",
    "src/**/*.backup.*",
    "src/**/*backup*.*",
    "src/**/*backup*",
    "src/app/(dashboard)/proposals/manage/page-new.tsx",
    "archive/**",
    "src/archived/**",
    "temp-migration/**",
    "backups/**",
    // Environment files
    "**/.env*",
    "production-env-vars.env",
    // Session files
    "**/.posalpro-cli-session*.json",
    "**/.posalpro-ui-session*.json",
    // System files
    "**/.DS_Store",
    // SQL files
    "**/*.sql",
    // Data files
    "test_output.json",
    "customers_*.json",
    "products_*.json",
    "database-integrity-report.json",
    // IDE files
    "**/.vscode/**",
    "**/.idea/**",
    // OS files
    "**/Thumbs.db",
    "**/*.log"
  ]
}
