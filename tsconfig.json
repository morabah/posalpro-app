{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": ".next/cache/tsconfig.tsbuildinfo",
    "types": ["node", "jest"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2017",

    // Performance optimizations
    "assumeChangesOnlyAffectDirectDependencies": true,
    "disableReferencedProjectLoad": false,
    "disableSourceOfProjectReferenceRedirect": false,
    "disableSolutionSearching": false,
    "skipDefaultLibCheck": true,
    "preserveWatchOutput": true,

    // Memory optimizations
    "maxNodeModuleJsDepth": 0,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "explainFiles": false,
    "extendedDiagnostics": false,

    // Build optimizations - declarations required for composite projects
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "removeComments": false,
    "importHelpers": false,
    "downlevelIteration": false
  },
  "references": [
    {
      "path": "./tsconfig.core.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.dashboard.json"
    }
  ],
  "include": ["next-env.d.ts"],
  "exclude": [
    "node_modules",
    "templates/**",
    "docs/**",
    "**/*.md",
    "scripts/**",
    "src/lib/testing/**",
    "src/test/**",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "tests/**",
    "src/components/dashboard/analytics/**",
    "src/components/dashboard/integrations/**",
    "src/components/dashboard/personalization/**",
    "src/**/*.backup.*",
    "src/**/*backup*.*",
    "src/**/*backup*",
    "src/app/(dashboard)/proposals/manage/page-new.tsx",
    "archive/**",
    "src/archived/**",
    "temp-migration/**",
    "backups/**",
    // Environment files
    "**/.env*",
    "production-env-vars.env",
    // Session files
    "**/.posalpro-cli-session*.json",
    "**/.posalpro-ui-session*.json",
    // System files
    "**/.DS_Store",
    // SQL files
    "**/*.sql",
    // Data files
    "test_output.json",
    "customers_*.json",
    "products_*.json",
    "database-integrity-report.json",
    // IDE files
    "**/.vscode/**",
    "**/.idea/**",
    // OS files
    "**/Thumbs.db",
    "**/*.log"
  ]
}
