{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./config/tsconfig.dashboard.tsbuildinfo"
  },
  "include": [
    "src/app/(dashboard)/**/*.ts",
    "src/app/(dashboard)/**/*.tsx",
    "src/components/dashboard/**/*.ts",
    "src/components/dashboard/**/*.tsx",
    "src/hooks/dashboard/**/*.ts",
    "src/hooks/dashboard/**/*.tsx",
    "src/lib/dashboard/**/*.ts",
    "src/lib/dashboard/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "archive/**",
    "src/archived/**",
    "docs/**",
    "scripts/**",
    "src/test/**"
  ]
}
